{
    "name": "riadh-benchouche/laravel-lang-manager",
    "description": "Laravel package to manage multi-language translations in a simplified way.",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "type": "library",
    "keywords": [
        "laravel",
        "translations",
        "multi-language"
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.3",
        "illuminate/routing": "^11.33",
        "illuminate/view": "^11.3",
        "illuminate/filesystem": "^11.3",
        "illuminate/console": "^11.3"
    },
    "repositories": {
        "laravel-lang-manager": {
            "type": "vcs",
            "url": "https://github.com/riadh-benchouche/laravel-lang-manager.git"
        },
        "0": {
            "type": "vcs",
            "url": "https://github.com/riadh-benchouche/laravel-lang-manager.git"
        }
    },
    "require-dev": {
        "pestphp/pest": "^3.5",
        "larastan/larastan": "^3.0",
        "fakerphp/faker": "^1.24",
        "friendsofphp/php-cs-fixer": "^3.64",
        "mockery/mockery": "^1.6"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Riadh\\LaravelLangManager\\": "src/"
        }
    },
    "authors": [
        {
            "name": "riadh",
            "email": "r.benchouche1@gmail.com"
        }
    ],
    "scripts": {
        "test": "pest",
        "analyse": "phpstan analyse",
        "format": "php-cs-fixer fix"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Riadh\\LaravelLangManager\\LaravelLangManagerServiceProvider"
            ]
        }
    }
}
